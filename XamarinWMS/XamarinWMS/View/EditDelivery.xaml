<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XamarinWMS.EditDelivery"
             Title="Edit Delivery">
  <ContentView.Content>
    <TableView Intent="Settings">
      <TableRoot>
        <TableSection Title="Edit Delivery">
          <EntryCell x:Name="txtDelId" Label="Delivery Id" Text ="{Binding DeliveryId}" Keyboard="Numeric" />
          <EntryCell x:Name="txtName" Label="Name" Text ="{Binding Name}" Keyboard="Text" />
          <EntryCell x:Name="txtState" Label="State" Text ="{Binding State}" Keyboard="Text" />
          <ViewCell>
            <ContentView Padding="0,0">
              <ContentView.Content>
                <Button Text="Save" Clicked="OnSaveClicked" />
              </ContentView.Content>
            </ContentView>
          </ViewCell>
        </TableSection>
      </TableRoot>
    </TableView>
  </ContentView.Content>
</ContentPage>